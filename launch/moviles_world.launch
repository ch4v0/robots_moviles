<launch>
  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find robots_moviles)/worlds/small_maze.world"/> <!-- Note: the world_name is with respect to GAZEBO_RESOURCE_PATH environmental variable -->
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>  
  </include>



  <param name="kobuki_with_laser" command="$(find xacro)/xacro.py '$(find robots_moviles)/urdf/kobuki_with_laser.urdf.xacro'" />
   <param name="intensity" type="bool" value="false"/>
  <node name="kobuki_with_laser" pkg="gazebo_ros" type="spawn_model" args="-param kobuki_with_laser intensity -urdf
	-x 3.5
	-y 0.5
	-z 0.2
	-yaw 0.0000
	 -model robot" />

	 <arg name="urdf_file" default="$(find xacro)/xacro.py '$(find kobuki_description)/urdf/kobuki_standalone.urdf.xacro'" />
  <param name="robot_description" command="$(arg urdf_file)" />
  
  <node pkg="nodelet" type="nodelet" name="mobile_base_nodelet_manager" args="manager"/>
  <node pkg="nodelet" type="nodelet" name="bump_blink_controller" args="load kobuki_controller_tutorial/BumpBlinkControllerNodelet mobile_base_nodelet_manager">
    <remap from="bump_blink_controller/events/bumper" to="mobile_base/events/bumper"/>
    <remap from="bump_blink_controller/commands/led1" to="mobile_base/commands/led1"/>
  </node>
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
    <param name="publish_frequency" type="double" value="5.0" />
  </node>
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="true"/>
  </node>
  
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find robots_moviles)/small_maze.rviz"/>



  <!-- Run the map server -->
  <arg name="map_file" default="$(find robots_moviles)/small_maze.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <node pkg="tf" type="static_transform_publisher" name="map_to_odom_link" args="3.5 0.5 0 0 0 0 map odom 20" />
  <node pkg="tf" type="static_transform_publisher" name="odom_to_base_link" args="0 0 0 0 0 0 odom base_link 20" />
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_hokuyo" args="0 0 0 0 0 0 base_link hokuyo 20" />

  


<!--node name="rviz" pkg="rviz" type="rviz" args="-d $(find kobuki_rviz_launchers)/rviz/robot.rviz" /-->
</launch>

roslaunch kobuki_node robot_with_tf.launch 
